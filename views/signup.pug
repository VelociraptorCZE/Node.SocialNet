extends layout/@layout

block content
    div.login-box
        h3.login-box__title="Create a new account"
        form#signup-form(action="/new-account", method="post")
            input.login-box__input(name="nick", type="text", placeholder="Nickname")
            input.login-box__input(name="password", type="password", placeholder="Password")
            input.login-box__submit(type="submit", value="Sign up")
        if flash
            div(class=`flash--${flash.class}`)=flash.content